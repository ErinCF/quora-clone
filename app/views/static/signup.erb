<div>
  <h2>Sign Up for an account!</h2>
  <form method=post action=/signup>
    <input type="text" placeholder="First Name" name="user[first_name]">
    <input type="text" placeholder="Last Name" name="user[last_name]"><br><br>
    <input type="text" placeholder="Email" name="user[email]"><br>
    <input type="password" placeholder="Password" name="user[password]"><br><br>
    <input type="submit" value="Sign up">
  </form>
</div>

<div>
<%if @collected_errors != nil %>
  <p> Error Message: </p>
  <ol>
  <% @collected_errors.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ol>
<%end%>

</div>